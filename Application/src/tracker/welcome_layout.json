{"objects":[
    {
        "type":"vlayout",
        "align":"center", 
        "origin":[0.5,0.5],
        "pos":"[{*:{window_size.x}:0.3},{*:{window_size.y}:0.45}]",
        "pad":[10,0,10,5],
        "children":[
            {
                "type":"image",
                "path":"gfx/TRexA_1024.png",
                "scale":"{image_scale}"
            },
            {
                "type":"stext",
                "text":"<b>Welcome</b> to {global.app_name}.",
                "color":[255,255,255],
                "font":{"size":1.25}
            },
            {
                "type":"stext",
                "text":"please select a task from the list on the right >",
                "fade_out":0.8,
                "color":[255,255,255],
                "font":{"size":0.75},
                "origin":[0.5, 0.5]
            }
        ]
    },
    {
        "type":"vlayout",
        "align":"center",
        "name":"recent",
        "pos":"[{-:{window_size.x}:10},10]",
        "origin":[1,0],
        "pad":[10,8,10,0],
        "children":[
            {
                "type":"list",
                "var":"recent_items",
				"fill":[40,40,40,220],
				"color":[225,225,225],
                "item_line":[100,100,100,150],
                "list":{
                    "size":"[{*:{window_size.x}:0.4},{-:{window_size.y}:120}]",
                    "line":"{if:{||:{selected}:{hovered}}:[100,175,250,200]:[100,100,100,150]}",
					"fill":[25,25,25,220]
                },
                "item_font":{
                    "size":0.75,
                    "align":"center"
                },
                "template": {
                    "text":"{i.name}",
                    "detail":"{i.detail}",
                    "action":"open_recent"
                }
            },
            {
                "type":"hlayout",
                "align":"center",
                "pad":[0,0,10,0],
                "children":[
                    {
                        "type":"button",
                        "text":"Open file",
                        "action":"open_file",
                        "size":[120,50],
                        "fill":[40,40,40,220],
                        "line":"{if:{||:{selected}:{hovered}}:[100,175,250,200]:[100,100,100,150]}"
                    },
                    {
                        "type":"button",
                        "text":"Webcam",
                        "action":"open_camera",
                        "size":[120,50],
                        "fill":[40,40,40,220],
                        "line":"{if:{||:{selected}:{hovered}}:[100,175,250,200]:[100,100,100,150]}"
                    }
                ]
            }
        ]
    }
]}